#: import GameScreen libs.baseclass.screens.game_screen.GameScreen

<GameScreen>:
    name: "Game"

    MDBoxLayout:
        orientation: 'vertical'
        padding: "10dp"
        spacing: "10dp"
        
        MDBoxLayout:
            orientation: 'vertical'
            padding: "10dp"
            spacing: "5dp"

            MDLabel:
                text: "Kategorija:"
                color: "##ffffff"
                font_size: 32
                bold: True
                halign: 'center'

            MDLabel:
                id: home_category_label
                text: "Random"
                color: "##ffffff"
                font_size: 32
                # bold: True
                halign: 'center'
            
        AnchorLayout:

            MDRoundFlatButton:
                id: spin_btn
                text: "PLAY"
                font_size: 64
                text_color: "##ffffff"
                on_press: root.spin()
