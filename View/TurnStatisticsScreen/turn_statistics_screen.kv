#: import TurnStatisticsScreen View.TurnStatisticsScreen.turn_statistics_screen.TurnStatisticsScreen

<TurnStatisticsScreen>:
    name: "Round Statistics"

    MainBox:

        TopBoxMainH:

            TopBoxSideV:

                TopLeftButton:
                    icon: 'close'
                    on_press: app.root.go_to("Home", "right")
            
            TopBoxMiddleV:

                HeaderLabel:
                    id: header_label
                    text: "Spēles pārskats"

                SubHeaderLabel:
                    text: ""

                TextLabel:
                    text: ""
                    font_size: 40
            
            TopBoxSideV:

        MiddleBoxV:

            ScrollView:

                MDList:
                    id: turn_word_list

        BottomBoxV:

            RoundTextButton:
                id: accept_words_btn
                text: "Apstiprināt"
                on_release: root.continue_game()