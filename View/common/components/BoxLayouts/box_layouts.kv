#: import * View.common.components.BoxLayouts.box_layouts

# Used as main screen container
<MainBox@MDBoxLayout>:
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"
        
# Used as top part container inside main container
# Orientation: vertical
<TopBoxV@MDBoxLayout>:
    size_hint_y: 0.15
    orientation: 'vertical'
    spacing: "10dp"
    spacing: "10dp"

# Used as middle part container inside main container
# Orientation: horizontal
<MiddleBoxH@MDBoxLayout>:
    size_hint_y: 0.75
    orientation: 'horizontal'
    padding: "10dp"
    spacing: "10dp"

# Used as middle part container inside main container
# Orientation: vertical
<MiddleBoxV@MDBoxLayout>:
    size_hint_y: 0.75
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"

# Used as middle part container inside main container
# Orientation: vertical
<BottomBoxV@MDBoxLayout>:
    size_hint_y: 0.1
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"
