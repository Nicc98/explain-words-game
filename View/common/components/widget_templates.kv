#: import * View.common.components.widget_templates

###
# Box layouts
###

# Main container - Vertical
<MainBox>:
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"

# Top part container - Vertical
<TopBoxV>:
    size_hint_y: 0.15
    orientation: 'vertical'
    spacing: "10dp"
    spacing: "10dp"

# Top part container - Horizontal
<TopBoxH>:
    size_hint_y: 0.15
    orientation: 'horizontal'
    spacing: "10dp"
    spacing: "10dp"

# Middle part container - Vertical
<MiddleBoxV>:
    size_hint_y: 0.75
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"

# Middle part container - Horizontal
<MiddleBoxH>:
    size_hint_y: 0.75
    orientation: 'horizontal'
    padding: "10dp"
    spacing: "10dp"

# Bottom part container - Vertical
<BottomBoxV>:
    size_hint_y: 0.1
    orientation: 'vertical'
    padding: "10dp"
    spacing: "10dp"

# Bottom part container - Horizontal
<BottomBoxH>:
    size_hint_y: 0.1
    orientation: 'horizontal'
    padding: "10dp"
    spacing: "10dp"

###
# Buttons
###

# Bottom Action Button
<RoundTextButton>:
    text: self.text
    text_color: app.theme_cls.accent_color
    line_color: app.theme_cls.accent_dark
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    font_size: 48
    line_width: 2

<TopLeftButton>:
    icon: self.icon
    theme_text_color: "Custom"
    text_color: app.theme_cls.primary_light
    md_bg_color: 0, 0, 0, .2
    user_font_size: 32
    pos_hint: {"center_y": 0.5, "left": 1}

###
# Labels
###

<HeaderLabel>:
    text: self.text
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_dark
    halign: 'center'
    valign: 'center'
    font_size: 64
    bold: True

<SubHeaderLabel>:
    text: self.text
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    halign: 'center'
    valign: 'center'
    font_size: 48
    bold: True

<TextLabel>:
    text: self.text
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_light
    halign: 'center'
    valign: 'center'
    font_size: 16

### List items

<TeamListItem>:
    text: self.text
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_light
    font_size: 32
    bold: True
    divider_color: 0, 0, 0, 0

    IconLeftWidgetWithoutTouch:
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: app.theme_cls.accent_color

    MDIconButton:
        id: delete_btn
        icon: 'trash-can-outline'
        theme_text_color: 'Error'
        pos_hint: {"center_y": 0.5, "right": 1}
        on_release: root.delete_item()

<ScoreListItem>:
    text: self.text
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_light
    font_size: 32
    bold: True
    divider_color: 0, 0, 0, 0

    IconLeftWidgetWithoutTouch:
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: app.theme_cls.accent_color

<WordListItem>:
    text: self.text
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_light
    font_size: 32
    bold: True
    divider_color: 0, 0, 0, 0

    MDSwitch:
        id: guessed_switch
        active: root.guessed
        icon_active: "plus"
        icon_inactive: "minus"
        thumb_color_active: app.theme_cls.primary_color
        thumb_color_inactive: "brown"
        pos_hint: {'center_y': 0.5, 'right': 0.9}
        on_active: root.on_switch_active
