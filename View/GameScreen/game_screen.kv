#: import GameScreen View.GameScreen.game_screen.GameScreen

<GameScreen>:
    name: "Game"

    MainBox:
        
        TopBoxMainH:

            TopBoxSideV:

                TopLeftButton:
                    icon: 'close'
                    on_press: app.root.go_to("Home", "right")
            
            TopBoxMiddleV:

                HeaderLabel:
                    id: header_label
                    text: ""

                SubHeaderLabel:
                    text: "Komanda:"

                TextLabel:
                    id: team_label
                    text: ""
                    font_size: 40
            
            TopBoxSideV:

                TopRightButton:
                    icon: 'fast-forward-outline'
                    on_press: root.go_to_turn_statistics()

        MiddleBoxH:

            # Filler
            MDBoxLayout:
                size_hint_x: 0.1
                orientation: 'vertical'

            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                padding: "10dp"

                # Game card
                MDBoxLayout:
                    size_hint: 0.8, 0.5
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    MDCard:

                        TextLabel:
                            id: guess_word
                            text: root.current_word
                            font_size: 64
                            bold: True

                # Game buttons
                MDBoxLayout:
                    size_hint: 0.8, 0.1
                    spacing: "10dp"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    SkipButton:
                        id: word_skipped_btn
                        icon: "close"
                        on_release: root.skip_word()

                    GuessButton:
                        id: word_guessed_btn
                        icon: "check"
                        on_release: root.guess_word()
                
            # Time progress bar and label
            MDBoxLayout:
                size_hint_x: 0.1
                orientation: 'vertical'
                spacing: "10dp"

                TextLabel:
                    id: timer_label
                    size_hint_y: 0.1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    text: "60"
                    font_size: 32
                    bold: True

                MDProgressBar:
                    id: timer_bar
                    size_hint: 0.5, 0.9
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    orientation: "vertical"
                    value: 60
                    max: 60
                    color: "#00FF00"

        BottomBoxV:
            id: bottom_layout
