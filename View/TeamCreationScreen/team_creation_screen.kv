#: import TeamCreationScreen View.TeamCreationScreen.team_creation_screen.TeamCreationScreen

<TeamCreationScreen>:
    name: "Team Creation"

    MDBoxLayout:
        orientation: 'vertical'
        padding: "10dp"
        spacing: "10dp"
        
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            padding: "10dp"
            spacing: "10dp"

            MDIconButton:
                icon: 'arrow-left'
                theme_text_color: "Custom"
                md_bg_color: 0, 0, 0, .2
                # text_color: 
                user_font_size: 32
                pos_hint: {"center_y": 0.5, "left": 1}
                on_press: app.root.set_current_screen("Home", "right")

            MDLabel:
                text: "Izveido komandas:"
                halign: 'center'
                valign: 'center'
                # color: 
                font_size: 64
                bold: True

        # Team input and display section
        MDBoxLayout:
            orientation: 'vertical'
            padding: "10dp"
            spacing: "5dp"

            # Team input
            MDBoxLayout:
                size_hint_y: 0.2

                MDTextField:
                    id: team_name_input
                    hint_text: "Komandas nosaukums"
                    max_text_length: 10
                    multiline: False
                    color_mode: 'Custom'
                    # line_color: 
                    # fill_color: 
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    # mode: 'round'
                
                MDIconButton:
                    icon: 'content-save-plus-outline'
                    theme_text_color: "Custom"
                    # text_color: 
                    user_font_size: 32
                    pos_hint: {"center_y": 0.5, "left": 1}
                    on_press: root.add_team()

            # List of added teams
            MDBoxLayout:
                size_hint_y: 0.8
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"
                # md_bg_color: 

                MDLabel:
                    size_hint_y: 0.1
                    text: "Komandas:"
                    font_size: 32
                    halign: 'center'
                    valign: 'center'
                    bold: True

                MDScrollView:
                    always_overscroll: False

                    MDList:
                        id: team_list

        AnchorLayout:
            size_hint_y: 0.1

            MDRoundFlatButton:
                id: new_game_btn
                text: "Spēlēt"
                font_size: 48
                # text_color: 
                line_width: 2
                # line_color: 
                on_press: root.go_to_game()
