#: import TeamCreationScreen View.TeamCreationScreen.team_creation_screen.TeamCreationScreen

<TeamCreationScreen>:
    name: "Team Creation"

    MainBox:
        
        TopBoxV:

            TopLeftButton:
                icon: 'arrow-left'
                on_press: app.root.go_to("Home", "right")

            HeaderLabel:
                text: "Izveido komandas:"

        MiddleBoxV:

            # Team input
            MDBoxLayout:
                size_hint_y: 0.2

                MDTextField:
                    id: team_name_input
                    hint_text: "Komandas nosaukums"
                    max_text_length: 10
                    multiline: False
                    color_mode: 'Custom'
                    line_color: app.theme_cls.primary_light
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                
                MDIconButton:
                    icon: 'content-save-plus-outline'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.accent_color
                    user_font_size: 32
                    pos_hint: {"center_y": 0.5, "left": 1}
                    on_press: root.add_team()

            # List of added teams
            MDBoxLayout:
                size_hint_y: 0.8
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"
                # md_bg_color: 

                SubHeaderLabel:
                    text: "Komandas:"
                    size_hint_y: 0.1

                MDScrollView:
                    always_overscroll: False

                    MDList:
                        id: team_list

        BottomBoxV:

            RoundTextButton:
                id: continue_btn
                text: "Spēlēt"
                on_press: root.go_to_game()
