# Import Python files
#: import HomeScreen View.HomeScreen.home_screen.HomeScreen

# Import Kivy files
#: include View/HomeScreen/components/setting_dropdown.kv

<HomeScreen>:
    name: "Home"

    MDNavigationDrawer:
        id: nav_drawer

        canvas.before:
            Color:
                rgba: app.storage_manager.get_color('light_pink')

        OptionsNavigationDrawer:

    MDBoxLayout:
        orientation: 'vertical'
        padding: "10dp"
        spacing: "10dp"
        
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.3
            padding: "10dp"
            spacing: "10dp"

            MDIconButton:
                icon: 'menu'
                theme_text_color: "Custom"
                md_bg_color: 0, 0, 0, .2
                text_color: app.storage_manager.get_color('light_pink')
                user_font_size: 32
                pos_hint: {"center_y": 0.5, "left": 1}
                on_press: nav_drawer.set_state("open")

            MDLabel:
                text: "Vārdu Spēle"
                halign: 'center'
                valign: 'center'
                color: app.storage_manager.get_color('light_pink')
                font_size: 64
                bold: True

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.5
            padding: "10dp"
            spacing: "5dp"

            MDLabel:
                text: "Kategorija:"
                color: app.storage_manager.get_color('pink')
                font_size: 64
                bold: True
                halign: 'center'
                valign: 'bottom'

            MDLabel:
                id: home_category_label
                text: "Random"
                color: app.storage_manager.get_color('pink')
                font_size: 48
                bold: True
                halign: 'center'
                valign: 'top'
            
        MDBoxLayout:
            size_hint_y: 0.5
            orientation: 'vertical'

            MDRoundFlatButton:
                id: new_game_btn
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: "Jauna Spēle"
                font_size: 48
                text_color: app.storage_manager.get_color('light_blue')
                line_width: 2
                line_color: app.storage_manager.get_color('blue')
                on_press: app.root.set_current_screen("Team Creation")


