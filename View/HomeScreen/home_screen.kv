#: import HomeScreen View.HomeScreen.home_screen.HomeScreen

<HomeScreen>:
    name: "Home"

    MainBox:
        
        TopBoxV:

            TopLeftButton:
                icon: 'menu'
                on_press: nav_drawer.set_state("open")

            HeaderLabel:
                text: "Vārdu Spēle"

        MiddleBoxV:

            MDLabel:
                text: "Kategorija:"
                # color: 
                font_size: 64
                bold: True
                halign: 'center'
                valign: 'bottom'

            MDLabel:
                id: home_category_label
                text: "Random"
                # color: 
                font_size: 48
                bold: True
                halign: 'center'
                valign: 'top'
            
        BottomBoxV:

            RoundTextButton:
                id: new_game_btn
                text: "Jauna Spēle"
                on_press: app.root.set_current_screen("Team Creation")

    SettingsDrawer:
        id: nav_drawer
