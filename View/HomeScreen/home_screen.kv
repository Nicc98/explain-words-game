#: import HomeScreen View.HomeScreen.home_screen.HomeScreen

<HomeScreen>:
    name: "Home"

    MainBox:
        
        TopBoxV:

            TopLeftButton:
                icon: 'menu'
                on_press: nav_drawer.set_state("open")

            HeaderLabel:
                text: "Vārdu Spēle"

        MiddleBoxV:

            SubHeaderLabel:
                text: "Kategorija:"
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}

            TextLabel:
                id: home_category_label
                text: "Random"
                font_size: 32
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            
        BottomBoxV:

            RoundTextButton:
                id: new_game_btn
                text: "Jauna Spēle"
                on_press: app.root.go_to("Team Creation")

    SettingsDrawer:
        id: nav_drawer
