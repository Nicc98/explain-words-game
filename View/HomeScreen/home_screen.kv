#: import HomeScreen View.HomeScreen.home_screen.HomeScreen

<HomeScreen>:
    name: "Home"

    MainBox:
        
        TopBoxV:

        MDBoxLayout:
            size_hint_y: 0.75
            orientation: 'vertical'

            Image:
                source: 'assets/images/app_title.gif'
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                anim_delay: 0.05
                radius: 40, 40, 40, 40
            
        BottomBoxV:

            RoundTextButton:
                id: new_game_btn
                # text: "JAUNA SPĒLE"
                text: "Jauna Spēle"
                on_press: app.root.go_to("Team Creation")

    SettingsDrawer:
        id: nav_drawer
