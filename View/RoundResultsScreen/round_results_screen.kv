#: import RoundResultsScreen View.RoundResultsScreen.round_results_screen.RoundResultsScreen

<RoundResultsScreen>:
    name: "Round Results"

    MainBox:

        TopBoxV:

            TopLeftButton:
                icon: 'close'
                on_press: app.root.go_to("Home", "right")

            HeaderLabel:
                id: header_label
                text: f"{app.game_manager.round_number}. kārtas rezultāti"

        MiddleBoxV:

        BottomBoxV:

            RoundTextButton:
                id: start_new_round_btn
                text: "Turpināt"
                on_release: root.continue_game()
